include mixins

block variables
- let mainTitle = "Dysons";
- let description = "Магазин Dysons. Фены, стайлеры, пылесосы, увлажнители. Гарантия. Доставка.";

doctype html
html( lang="ru" )
  head
    meta( charset="UTF-8" )
    title #{mainTitle} !{title && "| " + title}
    meta( name="description" content= "" + description )
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    link( rel="stylesheet" href="css/style.min.css" )
  body

    .sprite(style="display:none")
      include ../../build/img/sprite.svg

    .wrapper

      include ../components/header/header

      block content

      include ../components/footer/footer
      include ../components/modal-add/modal-add
      include ../components/modal-buy-click/modal-buy-click
      include ../components/menu/menu
    script( src="js/jquery-3.5.1.min.js")
    script( src="js/vendor.min.js" )
    script( src="js/script.js" )
